#!groovy
pipeline {
    agent any

    //环境变量
    tools {
        nodejs 'nodejs20'
    }

    //常量参数
    environment {
        cred_id = "gitee"
        project_name = "xh-admin-backend"
        service_name = "${project_name}"
        image = "${service_name}:latest"
        git_project_url = "https://gitee.com/sun-xiaohan/${project_name}.git"
        git_project_branch = "main"
        outer_port = "2000"
        profile = "production"
        Dockerfile = '''
            FROM nginx:alpine3.17
            COPY dist /usr/share/nginx/html
        '''
    }

    stages {
        stage("fetch code") {
            steps {
                git credentialsId: cred_id, url: git_project_url, branch: git_project_branch
            }
        }
        stage("build project") {
            steps {
                sh "npm install"
                sh "npm run build:${profile}"
            }
        }
        stage("build docker image") {
            steps {
                //创建Dockerfile
                sh "echo '${Dockerfile}' > Dockerfile"
                sh "docker build -t ${image} ."
            }
        }
        stage("deploy") {
            steps {
                sh '''
                    if !(test -z "$(docker ps -a | grep -w $service_name )") then
                        docker stop ${service_name}
                        docker rm ${service_name}
                    fi
                    
                    docker run \
                        --name ${service_name} \
                        -p ${outer_port}:80 \
                        --restart=always \
                        -d ${image}
                '''
            }
        }
    }
}
